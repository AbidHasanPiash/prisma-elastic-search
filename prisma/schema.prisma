generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb" // "mysql" or "postgresql" or "mongodb" depending on your database
  url      = env("DATABASE_URL")
}

model Story {
  id        String @id @default(auto()) @map("_id") @db.ObjectId    // For MongoDB
  // id        Int   @id @default(autoincrement()) @map("_id")      // For SQL
  title     String
  content   String
  createdAt DateTime @default(now())
}